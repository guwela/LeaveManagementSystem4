@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary fw-bold">Welcome to the Leave Management System</h1>
        <p class="lead text-muted">
            Manage your leave requests, approvals, and balances all in one place — fast, secure, and user-friendly.
        </p>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="ti ti-calendar fs-1 text-info mb-3"></i>
                    <h5 class="card-title fw-bold">Request Leave</h5>
                    <p class="card-text text-muted">
                        Submit leave requests in minutes and track their approval status in real-time.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="ti ti-user-check fs-1 text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Manager Approvals</h5>
                    <p class="card-text text-muted">
                        Managers can review, approve, or decline leave requests quickly and fairly.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="ti ti-clipboard-list fs-1 text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Track Balances</h5>
                    <p class="card-text text-muted">
                        View remaining annual leave, sick leave, and other categories instantly.
                    </p>
                </div>
            </div>
        </div>
    </div>

    
</div>

