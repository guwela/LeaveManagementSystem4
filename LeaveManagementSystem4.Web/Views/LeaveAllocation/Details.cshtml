@model EmployeeAllocationVM
@{
    ViewData["Title"] = "View Allocations";
    var isAdmin = User.IsInRole(Roles.Administrator);
    var isEmployee = User.IsInRole(Roles.Employee);
    string message = isAdmin ? "There are no allocations" : "You have no allocations. Please contact your Administrator.";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fw-bold">Leave Allocations for @Model.FirstName @Model.LastName</h1>

        <div>
            @if (isAdmin)
            {
                <a asp-action="Index" class="btn btn-outline-info me-2">⬅ Back to List</a>
            }
            @if (isEmployee)
            {
                <a asp-controller="LeaveRequests" asp-action="Index" class="btn btn-outline-info">📜 View Request History</a>
            }
        </div>
    </div>

    <!-- Employee Information Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-semibold">Employee Information</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.FirstName)</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.LastName)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Email)</dd>

                <dt class="col-sm-3">Date of Birth</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.DateOfBirth)</dd>
            </dl>
        </div>
    </div>

    <!-- Missing Allocations Warning -->
    @if (isAdmin && !Model.IsCompletedAllocation)
    {
        <div class="alert alert-warning d-flex align-items-center justify-content-between shadow-sm">
            <span>⚠️ This user is missing some leave allocations.</span>
            <form asp-action="AllocateLeave" method="post" class="m-0">
                <input type="hidden" asp-for="@Model.Id" />
                <button type="submit" class="btn btn-sm btn-warning">Allocate Missing Leave Types</button>
            </form>
        </div>
    }

    <!-- Leave Allocations -->
    @if (Model.LeaveAllocations.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-semibold">
                    Leave Allocations - Period: @Model.LeaveAllocations[0].Period.Name
                </h5>
            </div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-light fw-semibold">
                    <div class="row">
                        <div class="col">Leave Type</div>
                        <div class="col">Original Allocation</div>
                        <div class="col">Current Allocation</div>
                        <div class="col text-end">Actions</div>
                    </div>
                </li>

                @foreach (var allocation in Model.LeaveAllocations)
                {
                    <li class="list-group-item">
                        <div class="row align-items-center">
                            <div class="col">@allocation.LeaveType.Name</div>
                            <div class="col">
                                <span class="badge bg-primary">@allocation.Days</span>
                            </div>
                            <div class="col">
                                <span class="badge bg-warning text-dark">@allocation.Days</span>
                            </div>
                            <div class="col text-end">
                                @if (isAdmin)
                                {
                                    <a asp-action="EditAllocation" asp-route-id="@allocation.Id" class="btn btn-sm btn-outline-warning me-2">✏ Edit</a>
                                }
                                <a asp-controller="LeaveRequests" asp-action="Create" asp-route-leaveTypeId="@allocation.LeaveType.Id" class="btn btn-sm btn-outline-success">➕ Request Leave</a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm mt-4">
            <h5 class="mb-0">@message</h5>
        </div>
    }
</div>
