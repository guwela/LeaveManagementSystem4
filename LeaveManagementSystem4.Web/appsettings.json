{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=LeaveManagementSystem4Db;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=false"
  },
  "EmailSettings": {
    "Server": "localhost",
    "Port": "25",
    "DefaultEmailAddress": "admin@localhost.com"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ] 
  },
  "AllowedHosts": "*"
}
